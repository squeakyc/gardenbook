<div class="jumbotron" id="tasks-jumbotron">
  <h1 class="display-4" id="home-title">My Tasks</h1>
  <%= link_to "New Garden", new_garden_path, class: "btn btn-light btn-lg", id: "new-buttons"%>
  <%= link_to "New Collection", new_collection_path, class: "btn btn-light btn-lg", id: "new-buttons"%>
  <%= link_to "New Plant", new_plant_path, class: "btn btn-light btn-lg", id: "new-buttons"%>
  <p class="lead" id="jumbotron-text">
    <em>"My garden is my most beautiful masterpiece."</em></p>
  <p id="jumbotron-text">- Claude Monet</p>
</div>
<br>
<br>


<div class="container">
  <%= link_to "New Task", new_task_path, class: "btn btn-info btn-lg btn-block", id: "new-task-button"%>

  <ul class="list-group list-group-flush" id="list">
    <% @tasks.each do |task| %>
      <li class="list-group-item"><%= task.description%><br><strong><%= task.deadline.strftime('%A %B %e, %Y') %></strong>
        <br>
        <td><%= link_to 'View', task, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td></li>
    <% end %>
  </ul>
<br>
